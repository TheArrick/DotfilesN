
#change focus 
alt - t : yabai -m window --focus south
alt - c : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - s : yabai -m window --focus east

#Mod layout
#rotate clockwise
shift + alt - r : yabai -m space --rotate 270

#flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

#flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

#toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

#maximize
shift + alt - m : yabai -m window --toggle zoom-fullscreen

#balance
shift + alt - e : yabai -m space --balance

#Displays


# swap windows
shift + alt - t : yabai -m window --swap south
shift + alt - c : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - n : yabai -m window --swap east

# move window and split
ctrl + alt - t : yabai -m window --warp south
ctrl + alt - c : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - n : yabai -m window --warp east

#move window to prev  
shift + alt - g : yabai -m window --space prev;
shift + alt - l : yabai -m window --space next;


shift + alt -1 : yabai -m window --space 1;
shift + alt -2 : yabai -m window --space 2;
shift + alt -3 : yabai -m window --space 3;
shift + alt -4 : yabai -m window --space 4;
shift + alt -5 : yabai -m window --space 5;
shift + alt -6 : yabai -m window --space 6;
shift + alt -7 : yabai -m window --space 7;

# Displays focus
alt - g: yabai -m display --focus west
alt - l: yabai -m display --focus east

# Move window between external screens
shift + alt - a : yabai -m window --display west; yabai -m display --focus west;
shift + alt - s: yabai -m window --display east; yabai -m display --focus east;
